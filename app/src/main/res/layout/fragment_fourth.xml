<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@color/screen_one"
             tools:context="test.bwie.com.mychatprogectitem.fragment.FourthFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height60"
        android:background="@color/TeaGreen">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的"
            android:textSize="@dimen/height20"
            android:textColor="@color/White"
            android:layout_centerInParent="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/say_hello_completed_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/height10"
            android:layout_marginTop="@dimen/height10"/>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fourfragment_image_title"
            android:layout_marginTop="@dimen/height20"
            android:layout_width="@dimen/height100"
            android:layout_height="@dimen/height100"
            android:src="@mipmap/user_icon_default"
            android:layout_marginLeft="@dimen/height20"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_toRightOf ="@id/fourfragment_image_title"
            android:layout_marginLeft="@dimen/height20">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sss"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="查看个人主页"/>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/right_nor"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/height20"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fourfragment_recyclerView_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>
