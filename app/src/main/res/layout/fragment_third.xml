<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height60"
        android:background="@color/TeaGreen">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分享"
            android:textColor="@color/White"
            android:layout_centerInParent="true"
            android:textSize="20sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/post_letter_down"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/height5"/>
    </RelativeLayout>


    <Button
        android:id="@+id/fragment_third_share_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分享"/>
    <Button
        android:id="@+id/fragment_third_share_streaming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="直播"/>
    <Button
        android:id="@+id/fragment_third_share_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
