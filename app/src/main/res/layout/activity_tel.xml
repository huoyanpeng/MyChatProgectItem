<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_tel"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.hyphenate.media.EMCallSurfaceView
            android:id="@+id/tel_surfaceView_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <com.hyphenate.media.EMCallSurfaceView
            android:id="@+id/tel_surfaceView_two"
            android:layout_width="@dimen/height150"
            android:layout_height="@dimen/height150"/>
    </FrameLayout>

    <TextView
        android:id="@+id/tel_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="000000000"
        android:textColor="@color/White"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true">

        <RelativeLayout
            android:id="@+id/tel_relative_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tel_ring_off_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tel_ring_off"
                android:layout_marginLeft="@dimen/height100"/>
            <ImageView
                android:id="@+id/tel_ring_dial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tel_answer"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/height100"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/tel_relative_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tel_ring_off_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_tel_ring_off"
                android:visibility="gone"
                android:layout_centerHorizontal="true"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
